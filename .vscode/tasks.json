{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm-dev",
      "detail": "npm-dev",
      "type": "npm",
      "script": "dev",
      "path": "./frontend",
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": {
              "regexp": "ready in 551 ms",
            },
            "endsPattern": {
              "regexp": "."
            }
          }
        }
      ],
    },
    {
      "label": "terminate_all_tasks",
      "command": "echo ${input:terminate}",
      "type": "shell",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "terminateAll"
    }
  ]
}
