{
    "configurations": [
        {
            "name": "[DEBUG] FRONTEND",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend",
            "preLaunchTask": "npm-dev",
            "postDebugTask": "terminate_all_tasks",
            "presentation": {
                "hidden": true,
                "group": "",
                "order": 1
            }
        },
        {
            "request": "launch",
            "name": "[DEBUG] BACKEND",
            "type": "debugpy",
            "module": "server",
            "cwd": "${workspaceFolder}/backend",
            "presentation": {
                "hidden": true,
                "group": "",
                "order": 1
            }
        },
        {
            "request": "launch",
            "name": "[TEST] TYPE_DEF_SCRIPT",
            "type": "debugpy",
            "program": "${workspaceFolder}/backend/test/test_type_definitions.py",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "sleep",
            "presentation": {
                "hidden": true,
                "group": "",
                "order": 1
            }
        },
        {
            "request": "launch",
            "name": "[BUILD] Compile OpenAPI Spec",
            "type": "debugpy",
            "program": "${workspaceFolder}/scripts/build_openapi_specs.py",
            "args": [
                "--assume_yes",
            ]
        }
    ],
    "compounds": [
        {
            "name": "[DEBUG] APPLICATION",
            "configurations": [
                "[DEBUG] BACKEND",
                "[DEBUG] FRONTEND",
            ],
            "stopAll": true,
        },
        {
            "name": "[TEST] TYPE_DEFS",
            "configurations": [
                "[DEBUG] BACKEND",
                "[TEST] TYPE_DEF_SCRIPT"
            ],
            "stopAll": true,
            
        }
    ]
}